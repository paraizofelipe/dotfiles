command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[vpnc]
command=~/.config/i3blocks/scripts/vpnc.sh
interval=10

[volume]
label=
#label=♪
command=amixer get Master | grep -E -o '[0-9]{1,3}?%' | head -1
instance=Master
#instance=PCM
interval=once
signal=10

